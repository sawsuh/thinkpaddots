#modes:
#super + r - run
#super + s - node control
#super + a - resize
#super + w - preselect 

#
# wm independent hotkeys
#

# terminal emulator
super + r; z
	urxvt -name term

super + r; x
	python3 /home/prash/.pt.py

# program launcher
super + r; r
	export PATH=/home/prash/.local/bin:$PATH; rofi -theme rofi-theme -show run -display-run ""

super + r; p
	rofi-pass

# start file browser
super + r; f
	bash ~/.files.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# suspend
super + alt + Escape
	systemctl suspend

# quit bspwm 
super + alt + shift + Escape
	pkill bspwm

# close and kill
super + s:{_, shift + } q
	bspc node -{c,k}

#
# state/flags
#

# start music player 
#super + shift + m
#	bash ~/.music.sh

# set the window state
super + {t,shift + t,x,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + s: {_, shift +} {h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# set the desktop to monocle mode
super + m
	bspc desktop focused --layout next

# focus the next in the current desktop
super + s:{Tab, shift + Tab}
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + {c,v}
	bspc desktop -f {prev,next}.local; 

# send to the given desktop
super + s: {1-9,0}
	bspc node -d '^{1-9,10}'

# send to next desktop
super + s: {c,v}
	bspc node -d {prev,next}

# focus the given desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'; 

# shift window into preselected region
super + s; super + {h,j,k,l}
	bspc node --to-node {west,south,north,east}

#
# preselect
#

# preselect the direction
super + w: {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + w: c
	bspc node -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + a: {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + a: shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# take a screenshot
Print
	bash ~/.scr.sh

# volume control
{XF86AudioRaiseVolume,XF86AudioLowerVolume} 
	bash ~/.audio.sh {+3%,-3%}

# mute
XF86AudioMute
	bash ~/.mute.sh 

# brightness controls
{XF86MonBrightnessDown,XF86MonBrightnessUp}
	xbacklight {-dec, -inc} 10

# keyboard backlight
{_, shift +} XF86Display
	bash ~/.backlight.sh {up,down}

# toggle bar
super + b
	python3 ~/.pbartoggle.py
